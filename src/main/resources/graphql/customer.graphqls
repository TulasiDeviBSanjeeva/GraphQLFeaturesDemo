scalar Date

schema {
    query: Query
    mutation: Mutation
}

type Customer {
    id:ID!
    name:String!
    email:String!

    orders:[Order]!
}

input CustomerInput {
    id:ID
    name:String!
    email:String!
}

type Query {
    customer(id:ID!):Customer

    customers:[Customer]!
}

type Mutation {

    saveCustomer(customer:CustomerInput!):Customer!

    deleteCustomer(id:ID!):Boolean!
}